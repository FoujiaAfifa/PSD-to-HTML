@model OrderWebApp.Models.Models.Member
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Member Create";
}
<h2>Add Member Info</h2>

<h3>@*@Html.ActionLink("See All Customers", "Show", "Customer", null, new { @class = "btn btn-primary float-right mt-2 btn-md" })*@</h3>

@if (ViewBag.SMsg != null)
{
    <p style="color: green; font-weight: bolder">@(ViewBag.SMsg)</p>
}

else if (ViewBag.FMsg != null)
{
    <p style="color: red; font-weight: bolder">@(ViewBag.FMsg)</p>
}


@using (Html.BeginForm("Add", "Member", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="panel-title">Member Details</div>
            </div>

            <div class="panel-body">

                <div class="form-group row">
                    @Html.Label("Code", "Member Code *", new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.TextBox("Code", null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Code, null, new { @class = "text-danger" })
                        @if (ViewBag.DMsg != null)
                        {
                            <p style="color: red; font-weight: bolder">@(ViewBag.DMsg)</p>
                        }
                    </div>
                </div>
                <div class="form-group row">
                    @Html.Label("Name", "Member Name *", new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.TextBox("Name", null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Name, null, new { @class = "text-danger" })
       
                    </div>
                </div>
                <div class="form-group row">
                    @Html.Label("Email", "Member Email *", new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.TextBox("Email", null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Email, null, new { @class = "text-danger" })
                  
                    </div>
                </div>

                <div class="form-group row ">
                    @Html.Label("Contact", "Member Contact *", new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.TextBox("Contact", null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Contact, null, new { @class = "text-danger" })
               
                    </div>
                </div>
                <div class="form-group row">
                    @Html.Label("MemberTypeID", "Member Type*", new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownListFor(c => c.MemberTypeID, Model.TypeList, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-10 s">
                    <input type="submit" class="btn btn-success" value="Save" />
                </div>
            </div>

        </div>


    </div>
}



