    <script type="text/javascript">
    function Action(id) {
        $.ajax({
            url: '@Url.Action("GetByID", "Order")',
            type: "POST",
            data: { "id": id },
            "success": function (data) {
                if (data != null) {
                    var vdata = data;
                    $("#Member_Name").val(vdata[0].Name);
                    $("#Member_Email").val(vdata[0].Email);
                    $("#Member_Contact").val(vdata[0].Contact);
                    $("#Member_MemberType_ID").val(vdata[0].MemberType.ID);
                }
            }
        });
        }

    </script>

